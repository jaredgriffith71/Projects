 
document.addEventListener('DOMContentLoaded', function() {
    // Assuming you have radio buttons or checkboxes with class 'choice'
    const choiceInputs = document.querySelectorAll('.choice');

    // Example mapping of selection values to image filenames
    const selectionToImageMap = {
        'choice1': 'image1.jpg',
        'choice2': 'image2.jpg',
        // Add more mappings as needed
    };

    choiceInputs.forEach(input => {
        input.addEventListener('change', function() {
            const selectedValue = this.value;
            displayImageBasedOnSelection(selectedValue);
        });
    });

    function displayImageBasedOnSelection(selectedValue) {
        const imageName = selectionToImageMap[selectedValue];
        if (imageName) {
            // Remove previously displayed images if needed
            const existingImages = document.querySelectorAll('.choice-image');
            existingImages.forEach(img => img.remove());

            const imgElement = document.createElement('img');
            imgElement.src = imageName;
            imgElement.alt = selectedValue;
            imgElement.classList.add('choice-image'); // Add class for styling or future reference
            document.body.appendChild(imgElement); // Display image immediately
        } else {
            console.log('No image found for selection:', selectedValue);
        }
    }
});
